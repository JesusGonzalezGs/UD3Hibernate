<?xml version="1.0" encoding="UTF-8" ?>
<hibernate-configuration xmlns="http://www.hibernate.org/xsd/orm/cfg">
    <session-factory>
        <property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://localhost:3306/testdb</property>
        <property name="connection.username">root</property>
        <property name="connection.password">root</property>
        <property name="dialect">org.hibernate.dialect.MariaDBDialect</property>
        <property name="show_sql">true</property>


        <mapping class="es.severo.persistence.entity.Tramite"/>
        <mapping class="es.severo.persistence.entity.Presupuesto"/>
        <mapping class="es.severo.persistence.entity.Book"/>
        <mapping class="es.severo.persistence.entity.Chapter"/>
        <mapping class="es.severo.persistence.entity.Person"/>
        <mapping class="es.severo.persistence.entity.Address"/>

    </session-factory>
</hibernate-configuration>